<p>
  <strong>Name:</strong>
  <%= @vulnerability.name %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @vulnerability.summary %>
</p>

<p>
  <strong>Published:</strong>
  <%= @vulnerability.created %>
</p>

<p>
  <strong>Modified:</strong>
  <%= @vulnerability.modified %>
</p>

<p>
  <strong>Component:</strong>
  <%= (@vulnerability.affected_system.nil? or @vulnerability.affected_system.blank?) ? "not explicitly known" : @vulnerability.affected_system %>
  <%= link_to 'Edit', edit_vulnerability_path(@vulnerability)  %>

</p>

<p>
  <strong>Reaction:</strong>
  <%= link_to_react(@vulnerability) %>
</p>

<p>
  <strong>View on:</strong>
  <%= link_to_nvd(@vulnerability) %>
  <%= link_to_cve_details(@vulnerability) %>
  <%= link_to_google(@vulnerability) %>
</p>

<div class='back-links'>
<%= render 'shared/back_links' %>
</div>
