<div class="container">

<p>
  <strong>Name:</strong>
  <%= @vulnerability.name %>
</p>

<p>
  <strong>Summary:</strong>
  <div class="vulnerability-summary">
  <%= @vulnerability.summary %>
  </div>
</p>


<div class="continue-research">
  <strong>Continue research on:</strong>
  <%= link_to_nvd(@vulnerability) %>
  <%= link_to_cve_details(@vulnerability) %>
  <%= link_to_google(@vulnerability) %>
</div>


<p>
  <strong>Published:</strong>
  <%=l @vulnerability.created, format: :long %>
</p>

<p>
  <strong>Modified:</strong>
  <%=l @vulnerability.modified, format: :long  %>
</p>

<p>
  <strong>Tagged to affect components:</strong>
    <div class='vulnerability-tags'>
      <% if @vulnerability.tags.count > 0 %>
        <%= render @vulnerability.tags %>
      <% else %>
        Not tagged by users yet.
      <% end %>
      <%= link_to_tag(@vulnerability, style: 'display: inline-block; margin-left: 2em;') %>
    </div>
</p>


<p>
  <strong>Reaction:</strong>
  <%= link_to_react(@vulnerability) %>
</p>


<p>
  <strong>Relevance for you:</strong>
  <%= why_relevant(@vulnerability, current_user).html_safe %>
</p>


<div class='back-links'>
<%= render 'shared/back_links' %>
</div>

</div>
