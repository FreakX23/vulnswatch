.vuln-cell {
  padding-left: 4px;
  padding-right: 4px;
}
.vuln-component, .vuln-status, .vuln-relevance {
  max-width: 14em;
}

.vuln-summary {
  text-align: justify;
  font-size: 85%;
  margin-top: 5px;
  min-width: 25em;
}

.vuln-name {
  min-width: 9em;
}

.vuln-updated {
  min-width: 7em;
}


tr.filters{
  td {
   background-color: white;
   min-height: 4em;
     input, select {
       //max-width: 8em;
       font-size: 80%;
     }
     input#summary_filter {
       width: 24em;
       //max-width: 25em;
     }
     input.table-search, select.table-search {
       min-width: 8em;
     }
     margin-bottom: 5px;
  }
}


form.search {
  position: relative;
  
  a.reset-search-btn {
    width: 4em;
    position: absolute;
    top: 0;
    right: 5em;
  }

}



a.vuln_link, a.status_link {
  margin-bottom: -9px;
  width: 35px;
  height: 24px;
  display: inline-block;
}

a.nvd_link {
  background: url(<%= asset_path('nvd.png') %>) no-repeat;
}

a.cve_details_link {
  background: url(<%= asset_path('cved.png') %>) no-repeat;
}

a.google_link {
  background: url(<%= asset_path('g.png') %>) no-repeat;
}

a.unknown {
  background: url(<%= asset_path('dontknow.png') %>) no-repeat;
}

a.in_progress {
  background: url(<%= asset_path('workinprogress.png') %>) no-repeat;
}

a.ok {
  background: url(<%= asset_path('ok.png') %>) no-repeat;
}

a.fixed {
  background: url(<%= asset_path('patched.png') %>) no-repeat;
}

a.relevant {
  background: url(<%= asset_path('relevant.png') %>) no-repeat;
}

a.no_reaction {
  background: url(<%= asset_path('dontknow.png') %>) no-repeat;
}


a.sorting-link {
  //color: black;
  text-decoration: none;
  &.descending:after {
    content: '▼';
  }
  &.ascending:after {
    content: '▲';
  }
}


//in show vulnerability

div.vulnerability-summary { 
  display: block;
  max-width: 80em;
  pre {
    font-size: 120%;
    word-wrap: normal;
    word-break: normal;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  }
}

div.continue-research{
  display: block;
  margin: 1em;
  a {
    margin-left: 3em;
  }
}
