td.affected_system, td.status, td.relevance {
  text-align: center;
}


div.update_vulnerabilities_warning {
  color: red;
}

form.search {
  position: relative;
  
  input.short-search {
    width: 100%;
    padding-right: 14em;
  }

  input.search-button {
    width: 8em;
    position: absolute;
    top: 0;
    right: 0;
  }
  
  a.reset-search-btn {
    width: 6em;
    position: absolute;
    top: 0;
    right: 8em;
  }

}



a.vuln_link, a.status_link {
  margin-bottom: -9px;
  width: 35px;
  height: 24px;
  display: inline-block;
}

a.nvd_link {
  background: url(<%= asset_path('nvd.png') %>) no-repeat;
}

a.cve_details_link {
  background: url(<%= asset_path('cved.png') %>) no-repeat;
}

a.google_link {
  background: url(<%= asset_path('g.png') %>) no-repeat;
}

a.unknown {
  background: url(<%= asset_path('dontknow.png') %>) no-repeat;
}

a.in_progress {
  background: url(<%= asset_path('workinprogress.png') %>) no-repeat;
}

a.ok {
  background: url(<%= asset_path('ok.png') %>) no-repeat;
}

a.fixed {
  background: url(<%= asset_path('patched.png') %>) no-repeat;
}

a.relevant {
  background: url(<%= asset_path('relevant.png') %>) no-repeat;
}

a.no_reaction {
  background: url(<%= asset_path('dontknow.png') %>) no-repeat;
}


a.sorting-link {
  color: black;
  text-decoration: none;
  &.descending:after {
    content: '▼';
  }
  &.ascending:after {
    content: '▲';
  }
}


//in show vulnerability

div.vulnerability-summary { 
  display: block;
  max-width: 80em;
  pre {
    font-size: 120%;
    word-wrap: normal;
    word-break: normal;
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  }
}

div.continue-research{
  display: block;
  margin: 1em;
  a {
    margin-left: 3em;
  }
}
